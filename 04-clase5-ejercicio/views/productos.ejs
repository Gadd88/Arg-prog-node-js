<%- include('head')%>
<div class="container">
    <div class="table">
        <h2> <%= title %> </h2>
        <p> <%= message %> </p>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Imagen</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    for (let i = 0; i < products.length; i++) { %> 
                        <tr>
                            <td><%= products[i].id %></td>
                            <td><%= products[i].title %></td>
                            <td><img src="<%= products[i].image %>" alt="product image" width='150px'></td>
                            <td><%=products[i].description%></td>
                            <td><%=products[i].category%></td>
                            <td>$<%=products[i].price%></td>
                        </tr>
                        <% }
                %>
            </tbody>
            <tfooter>
                <tr>
                    <td colspan="6">Todos los precios son expresados en USD</td>
                </tr>
            </tfooter>
            
        </table>
        
    </div>
</div>


<%- include('footer')%>

</body>
</html>